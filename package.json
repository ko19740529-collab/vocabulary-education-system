{
  "name": "vocabulary-test-system-v2-premium",
  "version": "2.1.0", 
  "description": "英単語テスト作成システム v2.0 + プレミアムPDF生成機能",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "deploy": "npm run build && wrangler pages deploy dist --project-name vocabulary-test-premium",
    "preview": "vite preview",
    "test": "curl http://localhost:3000",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "vite": "^5.0.0",
    "wrangler": "^3.78.0",
    "typescript": "^5.0.0"
  }
}